{
  "manifest_version": 3,
  "name": "Anti-Phish Guard",
  "version": "1.0",
  "description": "Detects phishing websites using ML.",
  "permissions": ["activeTab", "tabs", "identity"],
  "host_permissions": [
    "https://accounts.google.com/*",
    "https://apis.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["UI/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
